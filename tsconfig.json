{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@dap/*": [
        "libs/*/public_api.ts",
        "node_modules/@dap/*"
      ]
    },
    "strict": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}